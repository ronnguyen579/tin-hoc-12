
/* Tiêu đề chính */
h1 {
    color: white;
    background-color: #0096FF;
    text-align: center;
}

/* Tiêu đề phụ */
h2, h3 {
    font-family: Verdana, sans-serif;
}

h2 {
    text-align: center;
}

h3 {
    text-indent: 30px;
}

/* Định dạng văn bản */
p {
    font-family: Verdana, sans-serif;
}

/* Bộ chọn quan hệ */
/* Áp dụng màu crimson cho span nằm trực tiếp trong h2 và h3 */
h2 > span, 
h3 > span {
    color: crimson;
}

/* Các đoạn văn bản ngay sau tiêu đề */
h3 + p {
    font-style: italic;
}

/* Chỉnh style cho danh sách nằm trong info-box */
.info-box {
    background-color: #fde7f3; /* Light pink background */
    padding: 15px;
    border-radius: 10px;
    max-width: 600px; /* Giới hạn độ rộng */
}

/* Định dạng văn bản trong hộp thông tin */
.info-box > p {
    font-weight: bold;
}

/* Danh sách trong hộp thông tin */
.info-box > ul {
    padding-left: 20px;
}

/* Mỗi mục danh sách trong hộp thông tin */
.info-box ul > li {
    margin-bottom: 5px;
}

/* Định dạng liên kết trong hộp thông tin */
.info-box a {
    color: #d63384; /* Màu hồng đậm */
    text-decoration: none;
}

.info-box a:hover {
    text-decoration: underline;
}

/* Định dạng tiêu đề trong hộp thông tin */
.info-box > h3 {
    text-align: left;
    color: #cc3366;
}

/* Mục span nằm trong li của ul thuộc info-box */
.info-box ul > li > span {
    font-weight: bold;
    color: #ff4a4a;
}

    color: #555;
}


